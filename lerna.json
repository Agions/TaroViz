{
  "version": "1.0.1",
  "npmClient": "pnpm",
  "command": {
    "publish": {
      "message": "chore(release): publish %s",
      "registry": "https://registry.npmjs.org/",
      "ignoreChanges": ["*.md", "tests/**"]
    },
    "version": {
      "allowBranch": "main",
      "conventionalCommits": true,
      "exact": true,
      "message": "chore(release): %s"
    }
  },
  "packages": ["packages/*"]
}
