{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "composite": true,
    "paths": {
      "@taroviz/core": [
        "./src"
      ],
      "@taroviz/core/*": [
        "./src/*"
      ],
      "@taroviz/adapters": [
        "../adapters/src"
      ],
      "@taroviz/adapters/*": [
        "../adapters/src/*"
      ],
      "@taroviz/hooks": [
        "../hooks/src"
      ],
      "@taroviz/hooks/*": [
        "../hooks/src/*"
      ],
      "@taroviz/themes": [
        "../themes/src"
      ],
      "@taroviz/themes/*": [
        "../themes/src/*"
      ],
      "@taroviz/data": [
        "../data/src"
      ],
      "@taroviz/data/*": [
        "../data/src/*"
      ]
    },
    "declarationDir": "./dist",
    "skipLibCheck": true,
    "noEmitOnError": false,
    "allowJs": true
  },
  "include": [
    "src/**/*",
    "index.d.ts"
  ],
  "exclude": [
    "**/__tests__/**",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}