{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "composite": true,
    "paths": {
      "@agions/taroviz-core": [
        "./src"
      ],
      "@agions/taroviz-core/*": [
        "./src/*"
      ],
      "@agions/taroviz-adapters": [
        "../adapters/src"
      ],
      "@agions/taroviz-adapters/*": [
        "../adapters/src/*"
      ],
      "@agions/taroviz-hooks": [
        "../hooks/src"
      ],
      "@agions/taroviz-hooks/*": [
        "../hooks/src/*"
      ],
      "@agions/taroviz-themes": [
        "../themes/src"
      ],
      "@agions/taroviz-themes/*": [
        "../themes/src/*"
      ],
      "@agions/taroviz-data": [
        "../data/src"
      ],
      "@agions/taroviz-data/*": [
        "../data/src/*"
      ]
    },
    "declarationDir": "./dist",
    "skipLibCheck": true,
    "noEmitOnError": false,
    "allowJs": true
  },
  "include": [
    "src/**/*",
    "index.d.ts"
  ],
  "exclude": [
    "**/__tests__/**",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}