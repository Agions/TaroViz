{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationDir": "./dist",
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@taroviz/hooks": [
        "./src"
      ],
      "@taroviz/hooks/*": [
        "./src/*"
      ],
      "@taroviz/core": [
        "../core/src"
      ],
      "@taroviz/core/*": [
        "../core/src/*"
      ],
      "@taroviz/adapters": [
        "../adapters/src"
      ],
      "@taroviz/adapters/*": [
        "../adapters/src/*"
      ],
      "@taroviz/themes": [
        "../themes/src"
      ],
      "@taroviz/themes/*": [
        "../themes/src/*"
      ],
      "@taroviz/data": [
        "../data/src"
      ],
      "@taroviz/data/*": [
        "../data/src/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "index.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/__tests__/**",
    "**/*.test.ts",
    "**/*.test.tsx"
  ],
  "references": [
    {
      "path": "../core"
    },
    {
      "path": "../adapters"
    },
    {
      "path": "../themes"
    },
    {
      "path": "../data"
    }
  ]
}