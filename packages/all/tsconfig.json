{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "outDir": "./dist",
    "declarationDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@agions/taroviz-core/*": [
        "../core/src/*"
      ],
      "@agions/taroviz-adapters/*": [
        "../adapters/src/*"
      ],
      "@agions/taroviz-charts/*": [
        "../charts/src/*"
      ],
      "@agions/taroviz-themes/*": [
        "../themes/src/*"
      ],
      "@agions/taroviz-data/*": [
        "../data/src/*"
      ],
      "@agions/taroviz-hooks/*": [
        "../hooks/src/*"
      ],
      "@agions/taroviz-core": [
        "../core/src"
      ],
      "@agions/taroviz-adapters": [
        "../adapters/src"
      ],
      "@agions/taroviz-charts": [
        "../charts/src"
      ],
      "@agions/taroviz-themes": [
        "../themes/src"
      ],
      "@agions/taroviz-data": [
        "../data/src"
      ],
      "@agions/taroviz-hooks": [
        "../hooks/src"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}